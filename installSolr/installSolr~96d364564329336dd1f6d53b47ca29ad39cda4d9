#!/bin/bash
# 1. Install Solr version (6.2.1)
cd /opt/
sudo wget -nc http://archive.apache.org/dist/lucene/solr/6.2.1/solr-6.2.1.tgz
sudo tar -xvf solr-6.2.1.tgz
sudo ln -s /opt/solr-6.2.1/ /opt/solr
#sudo chmod 777 solr
echo "Check if solr is running"
sudo solr/bin/solr start
sudo solr/bin/solr stop

#2. Copy core files from ../data/solr to /var/solr/data with cpSolrCore
# Make directory /var/solr
sudo mkdir -p /var/solr/
sudo cp -r /home/gurnoor/workspace/QTM/installSolr/solrData/* /var/solr/

# 3. Restart solr
sudo /opt/solr/bin/solr restart -p 8983 -s /var/solr/data
